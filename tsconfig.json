{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noEmitOnError": true
  },
  "include": ["src"]
}
